@page
@model StudentRosterRazor.Pages.StudentRoster.IndexModel
@{
    ViewData["Title"] = "Index";
}

<br/>
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Student Roster</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-inf o form-control text-white">New Student</a>
    </div>
    <div class="col-12 border p-3">
        <table id="student_roster" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Last Name</th>
                    <th>Grade</th>
                    <th>Gender</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~js/StudentRoster.js"></script>
}

